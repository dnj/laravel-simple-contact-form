{
    "name": "dnj/laravel-simple-contact-form",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "dnj\\LaravelSimpleContactForm\\": "src/",
            "dnj\\LaravelSimpleContactForm\\Database\\Factories\\": "database/factory"
        }
    },
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.4.1",
        "friendsofphp/php-cs-fixer": "^3.1",
        "orchestra/testbench": "^7.0"
    },
    "autoload-dev": {
        "psr-4": {
            "dnj\\LaravelSimpleContactForm\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test:types" : "vendor/bin/phpstan analyze",
        "test:phpunit" : "vendor/bin/phpunit",
        "test:codestyle" : "vendor/bin/php-cs-fixer fix -v --dry-run --stop-on-violation --using-cache=no",
        "test": [
            "@test:types",
            "@test:phpunit",
            "@test:codestyle"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "dnj\\Account\\LaravelSimpleContactFormServiceProvider"
            ]
        }
    }
}
